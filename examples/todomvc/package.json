{
  "name": "@imdom/example-todomvc",
  "version": "0.1.0",
  "description": "TodoMVC using imdom and smart updates",
  "scripts": {
    "build": "npm run build:static && npm run build:client",
    "build:static": "mkdir -p dist && ../../node_modules/.bin/ts-node src/static",
    "build:client": "../../node_modules/.bin/rollup -c",
    "watch": "../../node_modules/.bin/rollup -c -w",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "build:release": "NODE_ENV=production npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "K <kayo@illumium.org>",
  "license": "MIT",
  "dependencies": {
    "todomvc-app-css": "^2",
    "todomvc-common": "^1"
  },
  "config": {
    "target_dir": "dist",
    "bind_uri": ":8081",
    "use_babel": false,
    "js_minifier": "uglify",
    "make_deps": true,
    "compress": true,
    "compressor": "zopfli",
    "visualize": true
  }
}
