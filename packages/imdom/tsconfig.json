{
  "extends": "../../tsconfig.checks.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es6",
    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "dom",
      "es2015",
      "es2018"
    ]
  },
  "typedocOptions": {
    "name": "ImDOM",
    "mode": "modules",
    "out": "doc",
    "theme": "../../node_modules/aiden-doc/typedoc_theme",
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true
  },
  "files": [
    "src/index.ts"
  ]
}
