{
  "name": "imdom",
  "version": "0.1.0",
  "description": "Immediate mode virtual DOM library.",
  "main": "index.js",
  "typings": "index.d.ts",
  "module": "es/index.js",
  "scripts": {
    "build": "npm run build-es && npm run build-js",
    "clean": "npm run clean-es && npm run clean-js",
    "build-es": "tsc --outDir es --module es6",
    "clean-es": "rm -rf es",
    "build-js": "tsc --outDir .",
    "clean-js": "rm -rf *.d.ts *.js *.js.map",
    "prepare": "npm run build",
    "build-test": "browserify -d test/index.ts -p [ tsify --noImplicitAny ] -o test-out.js",
    "clean-test": "rm -f test-out.js",
    "test": "testem ci",
    "test-node": "mocha -r ts-node/register test/node.ts -R spec",
    "test-dev": "testem",
    "doc.md": "typedoc --out doc.md --theme markdown src",
    "doc": "typedoc src",
    "doc.json": "typedoc --json doc.json src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/katyo/imdom"
  },
  "keywords": [
    "virtual-dom",
    "client",
    "server",
    "literium",
    "framework",
    "typescript",
    "es6",
    "es2015"
  ],
  "author": "K. <kayo@illumium.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/katyo/literium/issues"
  },
  "devDependencies": {
    "@types/jsdom": "^12",
    "@types/mocha": "^5",
    "@types/node": "^8",
    "aiden-doc": "^1",
    "browserify": "^16",
    "jsdom": "^13",
    "mocha": "^5",
    "testem": "^2",
    "ts-node": "^7",
    "tsify": "^4",
    "typedoc": "^0.14",
    "typedoc-plugin-external-module-name": "^2",
    "typedoc-plugin-markdown": "^1",
    "typescript": "^3"
  },
  "dependencies": {
    "tslib": "^1"
  }
}
